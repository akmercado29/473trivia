      <div class="well">
        <div class="thumbnail">
          <div class="caption">
            <h3>{{witness.fullName}}</h3>
            <div class="panel panel-danger">
              <div class="panel-heading">Sightings</div>
            </div>
          </div>
        </div>
      </div>
    </div> -->
<button {{action 'answerCheck'}} class="btn btn-primary">Submit</button>
{{/each}}
</div>
</form>
